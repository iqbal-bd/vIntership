@model IEnumerable<InventoryManagementSystem.Models.Header>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<br />
<div class="container">
    <div class="row">
        <div class="col-8 offset-1">
            <h1 class="text-center text-primary ">User Record</h1>
            <a class="btn btn-sm btn-success text-white m-2" asp-controller="Header" asp-action="Purchase">Purchase Menu</a>
            <p class="text-center text-success fs-3">@TempData["error"]</p>
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>PurchaseId</th>
                    <th>PurchaseDate</th>
                    <th>SupplierName</th>
                    <th>Address</th>
                    <th>EntryBy</th>
                    <th>EntryDate</th>
                    <th>Remark</th>
                    <th colspan="3">Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.PurchaseId</td>
                        <td>@item.PurchaseDate</td>
                        <td>@item.SupplierName</td>
                        <td>@item.Address</td>
                        <td>@item.EntryBy</td>
                        <td>@item.EntryDate</td>
                        <td>@item.Remark</td>

                        <td>
                            <a class="btn btn-sm btn-success" asp-controller="Header" asp-action="Edit" asp-route-id="@item.PurchaseId">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-danger" asp-controller="Header" asp-action="Delete" asp-route-id="@item.PurchaseId">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>