@model InventoryManagementSystem.Models.Header
@{
    ViewData["Title"] = "Purchase";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-info fw-bold ">New Purchase Portal</h1>
                    <p class="text-danger">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Purchase">
                        <div class="form-group">
                            <label class="text-black fs-4" asp-for="PurchaseDate">PurchaseDate</label>
                            <input type="text" asp-for="PurchaseDate" class="form-control" placeholder="dd/mm/yyyy">
                            <span asp-validation-for="PurchaseDate" class="text-warning"></span>
                        </div>
                        <div class="form-group">
                            <label class="text-black fs-4" asp-for="SupplierName">SupplierName</label>
                            <input type="text" asp-for="SupplierName" class="form-control" placeholder="SupplierName" />
                            <span asp-validation-for="SupplierName" class="text-warning"></span>
                        </div>
                        <div class="form-group">
                            <label class="text-black fs-4" asp-for="Address">Address</label>
                            <input type="text" asp-for="Address" class="form-control" placeholder="Address" />
                            <span asp-validation-for="Address" class="text-warning"></span>
                        </div>
                        <div class="form-group">
                            <label class="text-black fs-4" asp-for="EntryBy">EntryBy</label>
                            <input type="text" asp-for="EntryBy" class="form-control" placeholder="EntryBy" />
                            <span asp-validation-for="EntryBy" class="text-warning"></span>
                        </div>


                        <div class="row">
                            <div class="col">
                                <label class="text-black fs-4" asp-for="EntryDate">EntryDate</label>
                                <input type="text" asp-for="EntryDate" class="form-control" placeholder="dd/mm/yyyy">
                                <span asp-validation-for="EntryDate" class="text-warning"></span>
                            </div>
                            <div class="col">
                                <label class="text-black fs-4" asp-for="Remark">Remark</label>
                                <input type="text" asp-for="Remark" class="form-control" placeholder="Remark">
                                <span asp-validation-for="Remark" class="text-warning"></span>
                            </div>
                        </div>

                        <div class="form-group d-grid gap-2 col-4 mx-auto mt-3">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success fw-bold fs-3" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

