
@model UserRegistration_Login.Models.ViewModel.Login_SignUp
@{
    ViewData["Title"] = "SignUP";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-secondary rounded p-4">
            <div class="text-center">
                <h1 class="text-warning">User SignUP</h1>
            </div>
            <form method="post" asp-action="SignUp">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" placeholder="user name" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" placeholder="password" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-success btn-lg mb-1 mt-3"value="registration"/>
                </div>
            </form>
        </div>
    </div>
</div>



