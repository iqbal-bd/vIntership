@page
@model EmployeeProject.Pages.Employees.IndexModel
@{
}
<h1>Employees</h1>

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "no_image.png");

        <div class="card m-3" style="min-width: 18rem; max-width:30%;">
            <div class="card-header">
                <h3>@employee.FullName</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>

            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-id="@employee.Id" class="btn btn-success m-1">Details</a>
                <a asp-page="/Employees/Edit" asp-route-id="@employee.Id" class="btn btn-warning m-1">Edit</a>
                <a asp-page="/Employees/Delete" asp-route-id="@employee.Id" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>

